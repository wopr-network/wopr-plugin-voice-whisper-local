{
  "dependencies": {
    "dockerode": "^4.0.0"
  },
  "description": "Local Whisper STT provider using faster-whisper in Docker",
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@types/node": "^25.2.3",
    "typescript": "^5.3.0",
    "vitest": "^4.0.18",
    "semantic-release": "^24.0.0",
    "@wopr-network/semantic-release-config": "^1.0.0"
  },
  "main": "dist/index.js",
  "name": "@wopr-network/wopr-plugin-voice-whisper-local",
  "scripts": {
    "build": "tsc",
    "check": "biome check . --files-ignore-unknown=true",
    "dev": "tsc -w",
    "format": "biome format --write . --files-ignore-unknown=true",
    "lint": "biome check . --files-ignore-unknown=true",
    "lint:fix": "biome check --fix . --files-ignore-unknown=true",
    "prepublishOnly": "npm run build",
    "test": "vitest run"
  },
  "type": "module",
  "version": "1.0.0",
  "wopr": {
    "plugin": {
      "category": "voice",
      "description": "Local STT using faster-whisper (Docker)",
      "install": [
        {
          "image": "fedirz/faster-whisper-server",
          "kind": "docker",
          "label": "Pull faster-whisper server image",
          "tag": "latest-cpu"
        }
      ],
      "name": "voice-whisper-local",
      "requires": {
        "docker": [
          "fedirz/faster-whisper-server:latest"
        ]
      },
      "type": "stt"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ]
}