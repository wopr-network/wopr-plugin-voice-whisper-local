{
  "dependencies": {
    "@wopr-network/plugin-types": "^0.2.1",
    "dockerode": "^4.0.0"
  },
  "description": "Local Whisper STT provider using faster-whisper in Docker",
  "devDependencies": {
    "@biomejs/biome": "^2.4.3",
    "@types/dockerode": "^4.0.1",
    "@types/node": "^25.2.3",
    "typescript": "^5.3.0",
    "vitest": "^4.0.18"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "name": "@wopr-network/wopr-plugin-voice-whisper-local",
  "scripts": {
    "build": "tsc",
    "check": "biome check src/ tests/ && tsc --noEmit",
    "dev": "tsc --watch",
    "format": "biome format --write src/ tests/",
    "lint": "biome check src/ tests/",
    "lint:fix": "biome check --fix src/ tests/",
    "prepublishOnly": "npm run build",
    "test": "vitest run"
  },
  "type": "module",
  "version": "1.0.0",
  "wopr": {
    "plugin": {
      "category": "voice",
      "description": "Local STT using faster-whisper (Docker)",
      "install": [
        {
          "image": "fedirz/faster-whisper-server",
          "kind": "docker",
          "label": "Pull faster-whisper server image",
          "tag": "latest-cpu"
        }
      ],
      "name": "voice-whisper-local",
      "requires": {
        "docker": [
          "fedirz/faster-whisper-server:latest"
        ]
      },
      "type": "stt"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "release": {
    "extends": "@wopr-network/semantic-release-config"
  }
}
