{
  "dependencies": {
    "dockerode": "^4.0.0"
  },
  "description": "Local Whisper STT provider using faster-whisper in Docker",
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  },
  "main": "index.js",
  "name": "@wopr-network/wopr-plugin-voice-whisper-local",
  "scripts": {
    "build": "tsc",
    "check": "biome check src/ && tsc --noEmit",
    "dev": "tsc -w",
    "format": "biome format --write src/",
    "lint": "biome check src/",
    "lint:fix": "biome check --fix src/",
    "prepublishOnly": "npm run build"
  },
  "type": "module",
  "version": "1.0.0",
  "wopr": {
    "plugin": {
      "category": "voice",
      "description": "Local STT using faster-whisper (Docker)",
      "install": [
        {
          "image": "fedirz/faster-whisper-server",
          "kind": "docker",
          "label": "Pull faster-whisper server image",
          "tag": "latest-cpu"
        }
      ],
      "name": "voice-whisper-local",
      "requires": {
        "docker": [
          "fedirz/faster-whisper-server:latest"
        ]
      },
      "type": "stt"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ]
}
